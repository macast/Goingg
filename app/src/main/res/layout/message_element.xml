<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/tendp" >
    
<LinearLayout
    android:id="@+id/message_element_textlayout"
    android:layout_width="@dimen/zerodip"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="7">
    
    <TextView
        android:id="@+id/message_element_msgtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/hololighttext"/>
    <TextView
        android:id="@+id/message_element_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fivedp"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/message_element_datelayout"
    android:layout_width="@dimen/zerodip"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:gravity="right">
    
    <TextView
        android:id="@+id/message_element_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="right"/>
</LinearLayout>
</LinearLayout>
